% Like itemize, except doesn't waste as much vertical space.
\newenvironment{Itemize}{%
  \begin{itemize}%
  \setlength{\itemsep}{0.5ex}%
  \setlength{\parsep}{0.5ex}
}{\end{itemize}}

% Like enumerate, except doesn't waste as much vertical space.
\newenvironment{Enumerate}{%
  \begin{enumerate}%
  \setlength{\itemsep}{1ex}%
  \setlength{\parsep}{2ex}
}{\end{enumerate}}

% Like description, except doesn't waste as much vertical space.
\newenvironment{Description}{%
  \begin{description}%
  \setlength{\itemsep}{1ex}%
  \setlength{\parsep}{2ex}
}{\end{description}}

% description environment with long labels and hanging indent
\newlength{\longlabellen}
\def\longlistlabel#1{\makebox[\longlabellen][l]{#1}}
\def\longlist#1{\list{}{
        \settowidth{\longlabellen}{#1}
        \labelwidth\longlabellen
        \labelsep 0pt
        \leftmargin \longlabellen
%       \advance\leftmargin \leftmargini
        \itemindent 0pt
        \let\makelabel\longlistlabel}}
\def\endlonglist{\endlist}

